# Server
PORT=4000
NODE_ENV=development
CLIENT_ORIGIN=http://localhost:5173

# Google OAuth (Web client ID)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# Session
JWT_SECRET=change_me_to_a_long_random_string
SESSION_COOKIE_NAME=linkwan_session

# Google Sheets
# Put the SERVICE ACCOUNT JSON content as a single line JSON string.
# Easiest: paste the full JSON and keep it quoted.
GOOGLE_SERVICE_ACCOUNT_JSON='{ "type": "service_account", "project_id": "..." }'
GOOGLE_SHEETS_SPREADSHEET_ID=YOUR_SPREADSHEET_ID
GOOGLE_SHEETS_USERS_SHEET=users
GOOGLE_SHEETS_LOGIN_HISTORY_SHEET=login_history
